<?xml version="1.0" encoding="utf-8"?>
<com.cabbage.firetic.ui.gameboard.GameboardSector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/sector_size"
    android:layout_height="@dimen/sector_size"
    app:cardCornerRadius="0dp"
    app:cardElevation="@dimen/sector_default_elevation"
    app:cardUseCompatPadding="true"
    tools:layout_gravity="center"
    tools:showIn="@layout/simple_relativelayout">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/divider"
        android:stretchColumns="0,1,2">

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">

            <View
                android:id="@+id/btn_0"
                style="@style/board_unit"
                android:background="@color/white_smoke"
                android:tag="0"/>

            <View
                android:id="@+id/btn_1"
                style="@style/board_unit"
                android:background="@color/white_smoke"
                android:tag="1"/>

            <View
                android:id="@+id/btn_2"
                style="@style/board_unit"
                android:background="@color/white_smoke"
                android:tag="2"/>

        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">

            <View
                android:id="@+id/btn_3"
                style="@style/board_unit"
                android:background="@color/white_smoke"
                android:tag="3"/>

            <View
                android:id="@+id/btn_4"
                style="@style/board_unit"
                android:background="@color/white_smoke"
                android:tag="4"/>

            <View
                android:id="@+id/btn_5"
                style="@style/board_unit"
                android:background="@color/white_smoke"
                android:tag="5"/>

        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">

            <View
                android:id="@+id/btn_6"
                style="@style/board_unit"
                android:background="@color/white_smoke"
                android:tag="6"/>

            <View
                android:id="@+id/btn_7"
                style="@style/board_unit"
                android:background="@color/white_smoke"
                android:tag="7"/>

            <View
                android:id="@+id/btn_8"
                style="@style/board_unit"
                android:background="@color/white_smoke"
                android:tag="8"/>
        </TableRow>

    </TableLayout>

</com.cabbage.firetic.ui.gameboard.GameboardSector>