<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/main_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gameboard.GameboardActivity">

    <include layout="@layout/include_appbar"/>

    <RelativeLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_light"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <View
            android:id="@+id/dismiss_area_left"
            android:layout_alignParentStart="true"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:alpha="0.3"
            android:background="@color/white_smoke"
            android:clickable="true"/>

        <View
            android:id="@+id/dismiss_area_right"
            android:layout_alignParentEnd="true"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:alpha="0.3"
            android:background="@color/white_smoke"
            android:clickable="true"/>

        <View
            android:id="@+id/dismiss_area_top"
            android:layout_alignParentTop="true"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_toEndOf="@id/dismiss_area_left"
            android:layout_toStartOf="@id/dismiss_area_right"
            android:alpha="0.3"
            android:background="@color/white_smoke"
            android:clickable="true"/>

        <View
            android:id="@+id/dismiss_area_bottom"
            android:layout_alignParentBottom="true"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_toEndOf="@id/dismiss_area_left"
            android:layout_toStartOf="@id/dismiss_area_right"
            android:alpha="0.3"
            android:background="@color/white_smoke"
            android:clickable="true"/>


        <!--<android.support.v7.widget.CardView-->
            <!--android:id="@+id/gameboard_card"-->
            <!--android:layout_width="160dp"-->
            <!--android:layout_height="160dp"-->
            <!--android:clickable="true"-->
            <!--android:layout_centerInParent="true"-->
            <!--app:cardCornerRadius="0dp">-->

            <include layout="@layout/view_gameboard_sector"/>

        <!--</android.support.v7.widget.CardView>-->

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
