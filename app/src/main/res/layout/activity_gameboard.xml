<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/main_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cabbage.firetic.GameboardActivity">

    <include layout="@layout/include_appbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_light"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.CardView
            android:id="@+id/gameboard"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:layout_centerInParent="true"
            app:cardCornerRadius="0dp">

            <TableLayout
                android:id="@+id/gameboard_table"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/divider"
                android:stretchColumns="0,1,2">

                <TableRow
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/btn_1"
                        style="@style/board_unit"
                        android:layout_column="0"
                        android:tag="1">

                        <ImageView
                            style="@style/board_unit_content"
                            android:contentDescription="@null"
                            tools:tint="@color/accent"
                            tools:src="@drawable/ic_circle_80dp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/btn_2"
                        style="@style/board_unit"
                        android:layout_column="1"
                        android:tag="2">

                        <ImageView
                            style="@style/board_unit_content"
                            android:contentDescription="@null"
                            tools:tint="@color/accent"
                            tools:src="@drawable/ic_circle_80dp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/btn_3"
                        style="@style/board_unit"
                        android:layout_column="2"
                        android:tag="3">

                        <ImageView
                            style="@style/board_unit_content"
                            android:contentDescription="@null"
                            tools:tint="@color/accent"
                            tools:src="@drawable/ic_close_80dp"/>
                    </RelativeLayout>
                </TableRow>

                <TableRow
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/btn_4"
                        style="@style/board_unit"
                        android:layout_column="0"
                        android:tag="4">

                        <ImageView
                            style="@style/board_unit_content"
                            android:contentDescription="@null"
                            tools:tint="@color/accent"
                            tools:src="@drawable/ic_circle_80dp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/btn_5"
                        style="@style/board_unit"
                        android:layout_column="1"
                        android:tag="5">

                        <ImageView
                            style="@style/board_unit_content"
                            android:contentDescription="@null"
                            tools:tint="@color/accent"
                            tools:src="@drawable/ic_close_80dp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/btn_6"
                        style="@style/board_unit"
                        android:layout_column="2"
                        android:tag="6">

                        <ImageView
                            style="@style/board_unit_content"
                            android:contentDescription="@null"
                            tools:tint="@color/accent"
                            tools:src="@drawable/ic_circle_80dp"/>
                    </RelativeLayout>
                </TableRow>

                <TableRow
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/btn_7"
                        style="@style/board_unit"
                        android:layout_column="0"
                        android:tag="7">

                        <ImageView
                            style="@style/board_unit_content"
                            android:contentDescription="@null"
                            tools:tint="@color/accent"
                            tools:src="@drawable/ic_close_80dp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/btn_8"
                        style="@style/board_unit"
                        android:layout_column="1"
                        android:tag="8">

                        <ImageView
                            style="@style/board_unit_content"
                            android:contentDescription="@null"
                            tools:tint="@color/accent"
                            tools:src="@drawable/ic_circle_80dp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/btn_9"
                        style="@style/board_unit"
                        android:layout_column="2"
                        android:tag="9">

                        <ImageView
                            style="@style/board_unit_content"
                            android:contentDescription="@null"
                            tools:tint="@color/accent"
                            tools:src="@drawable/ic_circle_80dp"/>
                    </RelativeLayout>
                </TableRow>
            </TableLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>

